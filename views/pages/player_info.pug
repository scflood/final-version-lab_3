//- player-info.pug
include ../partials/header.pug
include ../partials/menu.pug

div.container
  br
  div.row
    div.col-4
      div.card
        - var image_src = "../../resources/img/helmet.jpg"
        if(player)
          - var playernum = player
          - image_src = "../../resources/img/player"+playernum+".jpg"
        

        img.card-img-top#player_img(src= image_src, alt="Football Player")
        div.card-body.mx-auto
          form.form(action="/player_info/select_player", method="get")
            select.custom-select(name="player_choice", onchange="this.form.submit()")
              option(selected) Select Player
              if(data)
                each val in data

                
                  option(value=val.id)=val.name

                // var id = val.id// option#-id=val.name
                // option(val=val.id)#(val.name)

              


             

- if(stats)            //- TODO: Populate the select with player options. Set the value to the player's id and display the player's name.
  div.col-8
    div.table-responsive
      table.table
        //- TODO: Set the player's information. On select, fill in the player's information in each of the field below. You will need to calculate the average rushing, receiving, and passing yards.
        tr
          th Year
          td=stats.year
        tr
          th Major
          td=stats.major
        tr
          th Games Played
          td=games
        tr
          td Passing Yards: #{stats.passing_yards}
          td Avg. Passing Yards: #{avg.pass}
        tr
          td Rushing Yards: #{stats.rushing_yards}
          td Avg. Rushing Yards: #{avg.rush}
        tr
          td Receiving Yards: #{stats.receiving_yards}
          td Avg. Receiving Yards: #{avg.rec}

include ../partials/footer.pug